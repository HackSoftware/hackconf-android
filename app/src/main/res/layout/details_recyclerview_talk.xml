<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <fragment
        android:name="com.google.android.youtube.player.YouTubePlayerFragment"
        android:id="@+id/youtube_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/details_talk_title"
        tools:text="Talk Title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_marginBottom="8dp"
        android:textColor="@color/colorText"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/details_talk_description"
        tools:text="Lorem ipsum"
        style="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorText"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include android:id="@+id/divider_under_title" layout="@layout/divider" />

    <TextView
        android:id="@+id/details_talk_slot"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/colorText"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include android:id="@+id/divider_under_slot" layout="@layout/divider" />

    <TextView
        android:id="@+id/details_talk_speaker"
        tools:text="Лектор"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/colorText"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/details_talk_speaker_bio"
        tools:text="Talk Speaker Bio"
        style="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorText"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include android:id="@+id/divider_under_speaker" layout="@layout/divider" />

</LinearLayout>

