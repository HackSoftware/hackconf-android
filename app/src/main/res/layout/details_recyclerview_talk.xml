<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    app:cardElevation="2dp"
    app:contentPadding="16dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/details_talk_title"
            tools:text="Talk Title"
            style="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/colorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include android:id="@+id/divider_under_title" layout="@layout/divider" />

        <TextView
            android:id="@+id/details_talk_slot"
            style="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include android:id="@+id/divider_under_slot" layout="@layout/divider" />

        <TextView
            android:id="@+id/details_talk_speaker"
            tools:text="Лектор"
            style="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/details_talk_speaker_bio"
            tools:text="Talk Speaker Bio"
            style="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorText"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include android:id="@+id/divider_under_speaker" layout="@layout/divider" />

    </LinearLayout>
</android.support.v7.widget.CardView>
